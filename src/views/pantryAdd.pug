//- Back button
.row.my-3: .col-auto.mr-auto
	button#pantry-back-btn.btn.btn-secondary(onclick='app.hidePantryAddPage()') <

form
	.form-row: .col
		input#pantry-form.form-control(autocomplete='off' placeholder='1 cup onion'
			type='text')

		#pantry-form-help.invalid-feedback.d-none

.row.mt-3.justify-content-center.align-items-center
	.col-auto: label.align-middle(for="pantry-expire") Expires
	.col-auto.pl-0: input#pantry-expire.form-control(type="date")

.row.mt-1: .col
	#pantry-expire-help.invalid-feedback.d-none

.row.mt-3.justify-content-center.align-items-center
	.col-auto: button#pantry-submit-btn.btn-lg.btn-secondary(onclick='app.submitIngredient()') Submit
	.col-auto: button#pantry-reset-btn.btn.btn-secondary(onclick='app.resetPantryForm()') Reset

.row.mt-3.justify-content-center: .col-auto: #pantry-save-status
